MDBoxLayout:
    orientation: 'vertical'
    md_bg_color: app.theme_cls.bg_light

    MDToolbar:
        title: 'Production BOM'

    MDBoxLayout:
        padding: ['50dp', 0]
        orientation: 'vertical'

        MDGridLayout:
            cols: 2

            MDLabel:
                id: lab_prod
                halign: 'center'
                text: 'Select a production bom list:'
                # md_bg_color: app.theme_cls.primary_color

            MDRelativeLayout:
                MDRoundFlatIconButton:
                    text: 'Browse'
                    icon: 'folder'
                    pos_hint: {'center_x': .3, 'center_y': .5}
                    on_press: app.set_bom_production_path()

        MDLabel:
            id: lab_prod_path
            halign: 'center'
            size_hint_y: .5
            text: ''

        MDSeparator

        MDGridLayout:
            cols: 2

            MDLabel:
                id: lab_bom
                halign: 'center'
                text: 'Select a main bom list:'

            MDRelativeLayout:
                MDRoundFlatIconButton:
                    text: 'Browse'
                    icon: 'folder'
                    pos_hint: {'center_x': .3, 'center_y': .5}
                    on_press: app.set_bom_path()

        MDLabel:
            id: lab_bom_path
            halign: 'center'
            size_hint_y: .5
            text: ''

        MDSeparator

        MDGridLayout:
            cols: 2
            spacing: ['20dp', 0]
            size_hint_y: 3

            MDLabel:
                text: 'PartSupplier:'
                halign: 'right'
            MDTextField:
                id: PartSupplier
                text: 'Alinco'
            MDLabel:
                text: 'Status:'
                halign: 'right'
            MDTextField:
                id: Status
                text: 'B'
            MDLabel:
                text: 'Besteldatum:'
                halign: 'right'
            MDTextField:
                id: Besteldatum
                text: app.today
            MDLabel:
                text: 'Leveringsdatum:'
                halign: 'right'
            MDTextField:
                id: Leveringsdatum

        MDSeparator

        MDRelativeLayout:
            MDFillRoundFlatButton:
                id: run_button
                text: 'Run!'
                font_size: 20
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: .8, .8
                on_press: app.update_bom()




